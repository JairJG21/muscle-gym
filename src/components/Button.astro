---
const { title, icon, clases, font, url } = Astro.props;
import { Icon } from 'astro-icon/components'
---

<a href={url} class={`${font} flex justify-center items-center bg-custom-red px-4 py-2 rounded-full gap-2`}>
    {title} <Icon class={clases} name={icon}/>
</a>

<style>
    a {
        transition: all 0.3s ease;
    }

    a:hover {
        box-shadow: 0px 0px 15px 0px #ffffff44;
    }

    a.active {
        background-color: #ED1C24 !important;
        color: #fff !important;
    }

    a:active {
        background-color: #ED1C24 !important;
        color: #fff !important;
    }
</style>